{
  "root": true,
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "rules": {
    "import/first": "off",
    "indent": [
      "error",
      2
    ],
    "no-console": "off",
    "no-unused-vars": "warn",
    "padded-blocks": "off",
    "prefer-promise-reject-errors": "off",
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
